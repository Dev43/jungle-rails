<h1 style="color: white">Login</h1>


<dl class="dl-horizontal">
<div class="well">
<%= form_tag '/login' do %>

  <dt>Email: </dt>
  <dd><%= text_field_tag :email %> </dd>
  <br>
  <dt>Password: </dt>
  <dd><%= password_field_tag :password %> </dd>
  <br>
  <%= submit_tag "Submit" %>

<% end %>
</div>
</dl>